{% extends 'AdminBundle::layout.html.twig' %}

{% form_theme form '@Core/Form/bootstrap_3_horizontal_layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/settings.js') }}"></script>
{% endblock %}

{% block content %}
    <div class="content-group border-top-lg border-top-primary">
        <div class="page-header page-header-default" style="border-left: 1px solid #ddd; border-right: 1px solid #ddd;">
            <div class="page-header-content">
                <div class="page-title">
                    <h4>
                        <span class="text-semibold">Device settings</span>
                    </h4>
                </div>
            </div>
            {{ breadcrumbs() }}
        </div>
    </div>

    <div class="content">
        <div class="col-lg-12">
            <div class="panel panel-flat">
                <div class="panel-body">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="col-lg-12 text-right">
                        <input type="submit" class="btn btn-success" value="Save">
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}



